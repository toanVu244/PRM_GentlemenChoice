<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCD5CC" /> <!-- Pressed color -->
            <corners android:radius="12dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#131414"
                android:endColor="#040404"
                android:angle="45" /> <!-- Gradient background -->
            <corners android:radius="12dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>